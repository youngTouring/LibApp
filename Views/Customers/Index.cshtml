@model IEnumerable<LibApp.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<p>
    <a class="btn btn-primary" asp-action="New">New customer</a>
</p>

@if (!Model.Any())
{
    <p>There are no customers yet.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th colspan="2">Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
            <tr>
                <td><a asp-action="Edit" asp-route-id="@customer.Id">@Html.DisplayFor(modelItem => customer.Name)</a></td>
                <td>@customer.MembershipType.DiscountRate</td>
                <td><a asp-action="Details" asp-route-id="@customer.Id">Details</a></td>
            </tr>
            }
        </tbody>
    </table>
}